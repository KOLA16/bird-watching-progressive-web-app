<body>

<!-- Navigation Bar -->
<% include navbar %>

<main>
    <div class="container1">
    <div id="add">
    <h1><%= title %></h1>
    <form id="adding_form" enctype="multipart/form-data" method="post" action="/add">
        <input type="hidden" name="author" id="author" value="Unknown">
        <p>
            <label for="obs_date">Observation date:</label>
            <input type="datetime-local" name="obs_date" id="obs_date" required>
        </p>
        <p>
            <label for="location">Select sighting location:</label>
        </p>
        <label id="offline_label" for="lat" style="display: none">Offline, map not available, provide lat and lng manually: </label>
        <input step="any" name="lat" id="lat" value="53.383331" style="display: none" required>
        <input step="any" name="lng" id="lng" value="-1.466667" style="display: none" required>
        <!--The div element for the map -->
        <div id="map"></div>
        <p>
            <label for="bird_species">Identification:</label>
            <select id="bird_species" name="bird_species">
                <option value="Unknown">Unknown</option>
            </select>
        </p>
        <p>
            <label for="desc">Description:</label>
            <input type="text" name="desc" id="desc" required maxlength="5000">
        </p>
        <p>
            <label for="img">Load Image:</label>
            <input type="file" name="img" id="img" accept="image/*">
        </p>
        <button type="submit" id="submit_sighting_btn">Add Sighting</button>
    </form>
    </div>
    </div>
</main>


