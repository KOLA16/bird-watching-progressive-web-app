<!--</header>-->

<div class="grid-header">
    <!-- Navigation Bar -->
    <div class="navbar-container">
        <div class="nav-button">
            <a href="/">Home</a>
        </div>
        <div class="nav-button">
            <a href="/add">Add Sighting</a>
        </div>
    </div>
</div>

<div class="title-container">
    <h2 class="table-title">
        <%= title %>
    </h2>
</div>

<main>
    <div id="container">
        <form id="adding_form" enctype="multipart/form-data" method="post" action="/add">
            <div class="left-section">
                <input type="hidden" name="author" id="author" value="Unknown">

                <div class="subtitle-container">
                    <h2 class="small-title">
                        <%= "Select sighting location" %>
                    </h2>
                </div>
                <label id="offline_label" for="lat" style="display: none">Offline, map not available, provide lat and lng manually: </label>
                <input name="lat" id="lat" value="53.383331" style="display: none">
                <input name="lng" id="lng" value="-1.466667" style="display: none">
                <!--The div element for the map -->
                <div id="map"></div>
            </div>
            <div class="right-section">
                <div class="subtitle-container">
                    <h2 class="small-title">
                        <%= "Sighting details" %>
                    </h2>
                </div>
                <p>
                    <label for="obs_date">Observation date:</label>
                    <input type="datetime-local" name="obs_date" id="obs_date" required>
                </p>
                <p>
                    <label for="bird_species">Identification:</label>
                    <select id="bird_species" name="bird_species">
                        <option selected>Unknown</option>
                        <option>Uncertain</option>
                        <option id="offline-option" style="display: none">Added Offline (Identification to be updated)</option>
                    </select>
                </p>
                <p>
                    <label for="desc">Description:</label>
                    <input type="text" name="desc" id="desc" required maxlength="5000">
                </p>
                <p>
                    <label for="img">Load Image:</label>
                    <input type="file" name="img" id="img" accept="image/*">
                </p>
                <button type="submit" id="submit_sighting_btn">Add Sighting</button>
            </div>
        </form>
    </div>
</main>




